<h1 class="text-2xl mb-10">
  Whimsy
</h1>

<form hx-post="/app/generate_encounter">
  <label
    for="description"
    class="block mb-2.5 text-sm font-medium text-heading"
  >
    Your encounter description
  </label>
  <textarea
    name="description"
    id="description"
    rows="1"
    placeholder="start typing ..."
    class="bg-neutral-necondary-medium border border-default-medium text-heading text-sm rounded-base focus:ring-brand focus:border-band block w-full p-3.5 shadow-xs placeholder:text-body mb-1"
  >A wizard, rogue, fighter, and cleric fightining a red dragon and it's kobold minions in a cave.</textarea>
  <button
    hx-post="/app/generate_encounter"
    hx-indicator="next img"
    hx-swap="outerHTML"
    hx-target="closest form"
    class="text-white bg-red-500 box-border border border-transparent hover:bg-red-800 focus:ring-2 font-medium rounded-lg text-sm px-4 py-2.5 mb-1"
  >
    Generate Encounter
  </button>
  <img
    class="htmx-indicator"
    src={~p"/images/loaders/tail-spin.svg"}
    alt="Loading..."
  />
</form>
